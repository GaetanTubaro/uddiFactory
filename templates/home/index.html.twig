{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container-fluid mt-4">
		<h1 class="text-center">Derni√®res annonces</h1>
		<div class="row d-flex justify-content-center mt-3">
			{% for news in tabNews %}
				<div class="card col-2 mx-3">

					<img src="{% if news.getAdvertisementDogs() is not empty and news.getAdvertisementDogs()[0].getPictures() is not empty %} {{ news.getAdvertisementDogs()[0].getPictures()[0].getPath() }} {% else %} https://cdn-icons-png.flaticon.com/512/91/91544.png {% endif %}" class="card-img-top" alt="...">
					<div class="card-body">
						<h5 class="card-title">{{ news.title }}</h5>
					</div>
					<ul class="list-group list-group-flush">
						{% for dog in news.getAdvertisementDogs() %}
							<li class="list-group-item">{{ dog.name }}
								|
								{% for species in dog.getDogSpecies() %}
									{{ species.name }}
								{% endfor %}
							</li>
						{% endfor %}
						<li class="list-group-item">
							<a href="{{ path("show_advertisement", {id: news.getId()}) }}">Plus d'info</a>
						</li>
					</ul>

				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}
